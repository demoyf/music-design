music-color = #31c27c;
my-min-width = 1100px;
inpur-second = .75s;//输入框的动画时长
roll-scond = 1.5s;//滚动的动画时长
scale-second = .5s;//缩放的时长
max-screen-width = 82%;
min-screen-width=90%;
border-1px($color)
  position: relative
  &:after
    display: block
    position: absolute
    left: 0
    bottom: 0
    width: 100%
    border-top: 1px solid $color
    content: ' '
add_prefix(prop,arg)
	-webkit-{prop}: arg;
	-ms-{prop}: arg;
	-o-{prop}: arg;
	{prop}: arg;

ellipsis_tran()
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;

my-font-stretch()
  text-align: center;
  margin-bottom: 1.8em;
  font-size: 2em;
  color:#333;
  letter-spacing:.3em;
  font-stretch:narrower;
  font-family:SimHei;
  font-weight:bold;
  -webkit-transform: scale(.95);
  transform: scale(.95);

gardient-background()
  background: -webkit-gradient(linear,left top, left bottom,color-stop(40%, #99999928),to(white));
  background: linear-gradient(#AAAAAA16 40%,white 100%);

loop-ctrl-mixin()
  background:rgba(99,99,99,0.05);
  width:5em;
  height:7em;
  text-align:center;
  position: absolute;
  top:calc(50% - 3.5em);
  line-height:8.3em;

bottom-icon(temp)
  color:#999;
  display:inline-block;
  font-size:.65em;
  margin:0 temp;
  color:rgba(0,0,0,.15);
  -webkit-transition: color scale-second;
  transition: color scale-second;
  &:hover
    cursor:pointer;
    color: rgba(0,0,0,.3);
